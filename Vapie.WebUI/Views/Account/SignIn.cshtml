@model LoginFormModel
@{
    ViewData["Title"] = "SignIn";
}
<div class="col-lg-4 col-md-6 col-sm-8 mx-auto bg-white py-3 mb-4">
    <div class="row">
        <div class="col-12">
            <form method="post" asp-action="SignIn">
                <div asp-validation-summary="All"></div>
                @if (!string.IsNullOrWhiteSpace(ViewBag.Message))
                {
                    <div class="form-group mb-3">
                        <div class="alert alert-danger text-white">
                            @ViewBag.Message
                        </div>
                    </div>
                }
                <div class="mb-3">
                    <label asp-for="UserName" class="form-label">Email</label>
                    <input asp-for="UserName" id="email" class="form-control">
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" id="password" class="form-control">
                </div>
                <div class="mb-3">
                    <div class="form-check">
                        <input type="checkbox" id="remember" class="form-check-input">
                        <label for="remember" class="form-check-label ml-2">Remember Me</label>
                    </div>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-outline-dark">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>