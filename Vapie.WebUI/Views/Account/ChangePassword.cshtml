@model Vapie.WebUI.Models.FormModels.ChangePasswordFormModel

@{
    ViewData["Title"] = "ChangePassword";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SignIn</title>
    <link href="~/assets/css/login.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <section>

        <div class="box">

            <div class="square" style="--i:0;"></div>
            <div class="square" style="--i:1;"></div>
            <div class="square" style="--i:2;"></div>
            <div class="square" style="--i:3;"></div>
            <div class="square" style="--i:4;"></div>
            <div class="square" style="--i:5;"></div>

            <div class="container">
                <div class="form">
                    <h2>Change Password</h2>
                    <form asp-action="ChangePassword" method="post">
                        <div asp-validation-summary="All"></div>
                        @if (ViewBag.IsSuccess == true)
                        {
                            <div class="alert alert-success" role="alert">
                                Password Has Been Updated Successfully
                            </div>
                        }
                        <div class="inputBx password">
                            <input id="password-input" asp-for="CurrentPassword" name="currentpassword">
                            <span>Current Password</span>
                            <a href="#" class="password-control" onclick="return show_hide_password(this);"></a>
                            <i class="fas fa-key"></i>
                        </div>
                        <div class="inputBx password">
                            <input id="confirmpassword-input" asp-for="NewPassword" name="newpassword">
                            <span>New Password</span>
                            <a href="#" class="password-control" onclick="return show_hide_confirmpassword(this);"></a>
                            <i class="fas fa-key"></i>
                        </div>
                        <div class="inputBx password">
                            <input id="confirmnewpassword-input" asp-for="ConfirmNewPassword" name="confirmnewpassword">
                            <span>Confirm New Password</span>
                            <a href="#" class="password-control" onclick="return show_hide_confirmnewpassword(this);"></a>
                            <i class="fas fa-key"></i>
                        </div>
                        <label class="remember">
                            <input type="checkbox" required>
                            I agree to Terms and Conditions
                        </label>
                        <div class="inputBx">
                            <input type="submit" value="Save"/>
                        </div>
                    </form>
                    <p>Back to <a asp-action="Profile">Profile</a></p>
                </div>
            </div>

        </div>
    </section>
    <script src="~/assets/js/login.js"></script>
</body>
</html>
